  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>${pathSeparator}**"
      ],
      "program": "${workspaceFolder}${pathSeparator}src${pathSeparator}index.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}${pathSeparator}dist${pathSeparator}**${pathSeparator}*.js"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}${pathSeparator}.env"
    }
  ]
}